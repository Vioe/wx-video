/* miniprogram/pages/multi/detail/detail.wxss */

page {
  height: 100%;
}

.buffer-wrap {
  width: 100vw;
  height: 20rpx;
  position: absolute;
  top: 0;
  background-color: #eee;
  z-index: 1000;
}

.buffer {
  width: 100rpx;
  height: 20rpx;
  background-color: #ccc;
  animation: buffer 1.5s;
  animation-iteration-count: infinite;
}
@keyframes buffer {
  0% {
    width: 0;
  }
  100% {
    width: 100vw;
  }
}

.buffer:hover {
  height: 20rpx;
  width: 100vw;
  background-color: #666;
  transition: all 1s ease-in 1s;
}


.video-player {
  height: 100%;
  width: 100%;
}

.play-btn {
  width: 120rpx;
  height: 120rpx;
  z-index: 12;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.cover-img {
  position:absolute;
  z-index:10;
  width: 100%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.slider-container {
  position: fixed;
  bottom: 20px;
  left: 0;
  width: 100%;
  display: flex;
  background-color: transparent;
  z-index: 10;
}

.slider-container .left {
  width: 50px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: transparent;
}

.slider-container .right {
  width: 50px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.slider-container slider {
  flex: 1;
}

.swiper-container {
  height: 100%;
  overflow: hidden;
}

.swiper-item-cont {
  position: relative;
}

.dark {
  background-color: #000;
  color: #eee;
}

.wrap {
  width: 100%;
  height: 100%;
  position: fixed;
}

.operation .left-area {
  position: fixed;
  bottom: 100px;
  left: 15px;
  width: 140px;
}

.operation .left-area .video-title text {
  font-size: 16px;
}

.operation .right-area {
  position: fixed;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  right: 0px;
  bottom: 60px;
  width: 60px;
}

.operation .right-area text {
  font-size: 14px;
}

.operation .right-area image {
  width: 35px;
  height: 35px;
  margin-top: 15px;
}


